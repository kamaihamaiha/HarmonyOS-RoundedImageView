<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                   ohos:width="match_parent"
                   ohos:height="match_parent"
                   xmlns:app="http://schemas.huawei.com/hap/res-auto"
                   ohos:orientation="vertical">

    <Button
        ohos:id="$+id:mainButton"
        ohos:width="200vp"
        ohos:height="match_content"
        ohos:text_size="16fp"
        ohos:margin="15vp"
        ohos:padding="10vp"
        ohos:background_element="$graphic:color_cyan"
        ohos:text="$string:sample_1"
        ohos:text_alignment="left"/>

    <Button
        ohos:id="$+id:xmlButton"
        ohos:width="200vp"
        ohos:height="match_content"
        ohos:text_size="16fp"
        ohos:margin="15vp"
        ohos:padding="10vp"
        ohos:background_element="$graphic:color_cyan"
        ohos:text="$string:sample_2"
        ohos:text_alignment="left"/>

    <com.makeramen.roundedimageview.RoundedImageView
        ohos:id="$+id:two_riv"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:image_src="$media:jellyfish"
        ohos:orientation="vertical"
        ohos:top_padding="200vp"
        app:riv_border_width="3vp"
        app:riv_border_color="#4CAF50"
        app:riv_oval="false"
        />

</DirectionalLayout>